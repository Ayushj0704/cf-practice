###problem 1: https://codeforces.com/problemset/problem/281/A
#include<bits/stdc++.h>
using namespace std;
int main(){
    string s;
    cin>>s;
     if (!s.empty()) { 
        s[0] = toupper(s[0]);
    }
    cout<<s<<endl;
    return 0;
}

###problem2 :https://codeforces.com/problemset/problem/112/A
#include<bits/stdc++.h>
using namespace std;
 
int main(){
    string s, t;
    cin >> s >> t;
    
    string p = "", q = "";
    
   
    for(char c: s){
        p += tolower(c);
    }
    for(char c: t){
        q += tolower(c);
    }
 
    if(p < q){
        cout << -1 << endl;
    }
    else if(p > q){
        cout << 1 << endl;
    }
    else{
        cout << 0 << endl;
    }
    
    return 0;
}
