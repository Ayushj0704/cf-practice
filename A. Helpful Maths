### A. Helpful Maths
###problem link(rtd 800) : https://codeforces.com/contest/339/problem/A  ###
#include<bits/stdc++.h>
using namespace std;
int main(){
    
    string s;
    cin>>s;
    
    vector<int>arr;
    for(char c: s){
        if(c !='+'){
            arr.push_back(c-'0');
        }
    }
    sort(arr.begin(),arr.end());
    string a="";
    for (int i = 0; i < arr.size(); i++) {
        a += to_string(arr[i]);
        if (i != arr.size() - 1) {
            a += '+';
        }
    }
    
    cout<<a<<endl;
 
    return 0;
}
### A. Nearly Lucky Number
### problem link(rtd 800) https://codeforces.com/contest/110/problem/A
#include <bits/stdc++.h>
using namespace std;
 
int main() {
    string n;
    cin >> n;
 
    int count = 0;
    for (char c : n) {
        if (c == '4' || c == '7') {
            count++;
        }
    }
 
    if (count == 4 || count == 7) {
        cout << "YES\n";
    } else {
        cout << "NO\n";
    }
 
    return 0;
}
