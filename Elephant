###problem1 : https://codeforces.com/problemset/problem/617/A

#include<bits/stdc++.h>
using namespace std;
int main(){
    int x;
    cin>>x;
    int steps = (x+4)/5.0;
    cout<<steps<<endl;
}
###problem 2: https://codeforces.com/problemset/problem/467/A
#include<bits/stdc++.h>
using namespace std;
int main(){
    int n ;
    cin>>n;
    int cnt =0;
    while(n--){
        
        int p,q;
        cin>>p>>q;
        if(q-p>=2){
            cnt++;
        }
    }
    cout<<cnt<<endl;
    return 0;
}
