###problem :https://codeforces.com/problemset/problem/1901/A
#include <bits/stdc++.h>
using namespace std;

int main() {
    int t;
    cin >> t;
    while (t--) {
        int n, x;
        cin >> n >> x;
        
        vector<int> arr;
        arr.push_back(0); // start point
        
        for (int i = 0; i < n; i++) {
            int pos;
            cin >> pos;
            arr.push_back(pos);
        }
        
        arr.push_back(x); // end point
        sort(arr.begin(), arr.end());
        
        vector<int> gaps;
        for (int i = 1; i < (int)arr.size(); i++) {
            gaps.push_back(arr[i] - arr[i - 1]);
        }
        
        int maxi = *max_element(gaps.begin(), gaps.end());
        
        // special case: last station -> x -> last station
        maxi = max(maxi, 2 * (arr.back() - arr[arr.size() - 2]));
        
        cout << maxi << "\n";
    }
    return 0;
}
