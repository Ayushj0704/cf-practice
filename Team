###problem1 :https://codeforces.com/contest/158/problem/A
#include <bits/stdc++.h>
using namespace std;
 
int main() {
    int n, k;
    cin >> n >> k;
    
    vector<int> arr(n);
    for (int i = 0; i < n; i++) {
        cin >> arr[i];
    }
 
    int kth = arr[k - 1];
    int cnt = 0;
 
    for (int i = 0; i < n; i++) {
        if (arr[i] >= kth && arr[i] > 0) {
            cnt++;
        }
    }
 
    cout << cnt << endl;
    return 0;
}

###problem 2:  https://codeforces.com/contest/231/problem/A
#include <bits/stdc++.h>
using namespace std;
 
int main() {
    int n;
    cin >> n;
 
    int count = 0;
 
    for (int i = 0; i < n; ++i) {
        int a, b, c;
        cin >> a >> b >> c;
        if (a + b + c >= 2) {
            count++;
        }
    }
 
    cout << count << endl;
    return 0;
}
