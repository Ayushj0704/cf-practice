problem  : https://codeforces.com/problemset/problem/1850/D
#include <bits/stdc++.h>
using namespace std;
 
int main() {
    ios::sync_with_stdio(false); 
    cin.tie(nullptr);
 
    int t;
    cin >> t;
    while (t--) {
        typedef long long ll;
        ll n, k;
        cin >> n >> k;
        vector<ll> arr(n);
        for (int i = 0; i < n; i++) {
            cin >> arr[i];
        }
        sort(arr.begin(), arr.end());
 
        ll longest = 1, curr = 1;
        for (int i = 1; i < n; i++) {
            if (arr[i] - arr[i-1] <= k) {
                curr++;
                longest = max(longest, curr);
            } else {
                curr = 1;
            }
        }
        cout << n - longest << "\n";
    }
    return 0;
}
