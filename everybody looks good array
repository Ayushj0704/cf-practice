problem : https://codeforces.com/problemset/problem/1777/A
#include <bits/stdc++.h>
using namespace std;
using ll = long long;
 
int main() {
    ios::sync_with_stdio(false);
    cin.tie(nullptr);
 
    int t;
    cin >> t;
    while (t--) {
        ll n;
        cin >> n;
        vector<ll> arr(n);
        for (ll &x : arr) cin >> x;
 
        ll cnt = 0;
        for (int i = 0; i < n - 1; i++) {
            if ((arr[i] % 2) == (arr[i + 1] % 2)) {
                cnt++;
            }
        }
        cout << cnt << "\n";
    }
}
