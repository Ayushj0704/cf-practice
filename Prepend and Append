Problem : https://codeforces.com/problemset/problem/1791/C
#include <bits/stdc++.h>
using namespace std;
 
int orglen(string s) {
    int i = 0;
    int j = s.length() - 1;
 
    while (i <= j) {
        if (s[i] != s[j]) {
            s.erase(j, 1); 
            s.erase(i, 1); 
            i = 0;
            j = s.length() - 1;
        } else {
            break;
        }
    }
    return s.length();
}
 
int main() {
    ios_base::sync_with_stdio(false);
    cin.tie(nullptr);
 
    int t;
    cin >> t;
    while (t--) {
        int n;
        string s;
        cin >> n >> s;
        cout << orglen(s) << "\n";
    }
    return 0;
}
